{
    "env": {
        "browser": true
    },
    "extends": [
        "airbnb-base",
        "plugin:compat/recommended",
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "compat",
        "vue"
    ],
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": {"jest":  true}
        }
    ],
    "rules": {
        "vue/max-attributes-per-line": ["off"],
        "vue/singleline-html-element-content-newline": ["off"],
        "max-len": ["off"],
        "vue/html-closing-bracket-spacing": ["off"],
        "vue/multi-word-component-names": ["off"],
        "arrow-parens": ["off"]
    },
    "root": true,
    "globals": {
        "page": true,
        "chrome": true,
        "EXTENSION_ID": true
    }
}
