{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:compat/recommended",
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "compat",
        "vue"
    ],
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": {"jest":  true}
        }
    ],
    "rules": {
      "no-plusplus": [
          "error",
          {"allowForLoopAfterthoughts": true}
      ]
    },
    "root": true,
    "globals": {
        "page": true,
        "chrome": true,
        "EXTENSION_ID": true
    }
}
